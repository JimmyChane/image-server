{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": { "deleteOutDir": true, "webpack": false },
  "projects": {
    "local-file": {
      "type": "library",
      "root": "libs/local-file",
      "entryFile": "index",
      "sourceRoot": "libs/local-file/src",
      "compilerOptions": { "tsConfigPath": "libs/local-file/tsconfig.lib.json" }
    }
  }
}
