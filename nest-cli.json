{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": { "deleteOutDir": false, "webpack": true },
  "projects": {
    "app-config": {
      "type": "library",
      "root": "libs/app-config",
      "entryFile": "index",
      "sourceRoot": "libs/app-config/src",
      "compilerOptions": { "tsConfigPath": "libs/app-config/tsconfig.lib.json" }
    },
    "app-env": {
      "type": "library",
      "root": "libs/app-env",
      "entryFile": "index",
      "sourceRoot": "libs/app-env/src",
      "compilerOptions": { "tsConfigPath": "libs/app-env/tsconfig.lib.json" }
    }
  }
}
