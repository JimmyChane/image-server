{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": { "^.+\\.(t|j)s$": "ts-jest" },
  "moduleNameMapper": {
    "@app/app-config": "<rootDir>/../libs/app-config/src",
    "@app/app-config/(.*)": "<rootDir>/../libs/app-config/src/$1",
    "@app/app-env": "<rootDir>/../libs/app-env/src",
    "@app/app-env/(.*)": "<rootDir>/../libs/app-env/src/$1"
  }
}
